socket                              = /logs/mysql0/mysqld.sock


[mysql]
default-character-set               = utf8


[mysqladmin]
default-character-set               = utf8


[mysqldump]
default-character-set               = utf8
quick
max_allowed_packet                  = 256MB


[myisamchk]
default-character-set               = utf8
